                        <a style="all:unset!important" asp-controller="Vocabular" asp-action="word" asp-route-name="@Model.Words[i].Name">
                            <div class="badge @componentColor badge-vocab-lev rounded" data-toggle="tooltip" data-placement="top" data-html="true" title="@tooltip_style">
                                @Model.Words[i].Name
                            </div>
                        </a>
                    }
                </div>
            </div>

        </div>
    </div>
</div>