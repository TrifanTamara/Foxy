@model WebApp.DTOs.RegisterDto;
@using WebApp.DTOs;

@{
    ViewBag.Title = "Register Index";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Register</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Custom styles for this template -->
    <link href="~/css/login.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/js/login.js" rel="stylesheet">

    <link href="~/toastr/toastr.css" rel="stylesheet" />
    <script src="~/toastr/toastr.js"></script>
    <link rel="icon" href="~/imagesFoxy/logoFoxy.png">
</head>
<body class="text-center">
    <form class="form-signin" action="register" name="register" id="registerForm" method="post">
        <img class="mb-4" src="" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        
        <label for="inputEmail" class="sr-only">Username</label>
        <input class="form-control" name="UserName" type="text" placeholder="Username" required="required" data-validation-required-message="Please enter your name.">
        <p class="help-block text-danger text-left" ></p>

        <label for="inputEmail" class="sr-only">Email address</label>
        <input class="form-control" name="Email" type="email" placeholder="Email Address" required="required" data-validation-required-message="Please enter your email address.">
        <p class="help-block text-danger text-left">
            <span asp-validation-for="Email"></span>
        </p>
        <label for="inputPassword" class="sr-only">Password</label>
        <input asp-validation-for="Password" class="form-control" name="Password" type="password" placeholder="Password" required="required" data-validation-required-message="Please enter your password.">
        <p class="help-block text-danger text-left">
            <span asp-validation-for="Password"></span>
        </p>
        <label for="inputPassword" class="sr-only">Confirm Password</label>
        <input class="form-control" name="ConfirmPassword" type="password" placeholder="Confirm Password" required="required" data-validation-required-message="Please enter your password again.">
        <p class="help-block text-danger text-left">
            <span asp-validation-for="ConfirmPassword"></span>
        </p>
        <button class="btn btn-info btn-block form-control" type="submit" id="sendMessageButton">Sign up</button>
        <p class="help-block text-danger"></p>

        @if (!SharedInfo.RegisterError.Equals(""))
         {
            <div id="error-alert" class="alert alert-danger alert-dismissible form-control" role="alert" padding-top ="25px">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                @SharedInfo.RegisterError
            </div>
            @(SharedInfo.RegisterError = "")
         }
        <p class="mt-5 mb-3 text-muted">&copy;2018</p>
    </form>

</body>